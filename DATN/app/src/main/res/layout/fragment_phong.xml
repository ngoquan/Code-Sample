<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tên phông:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_MaPhong"
                    android:visibility="gone"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Tên phông ..."
                    android:id="@+id/txt_TenPhong"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cơ quan lưu trữ:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <Spinner android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.7"
                    android:id="@+id/spn_CQLT"
                    android:background="@drawable/design_spinner"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tổng số tài liệu:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Tổng số tài liệu ..."
                    android:id="@+id/txt_TSTL"
                    android:inputType="number"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Số TL chưa chỉnh lý:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Số tài liệu chưa chỉnh lý ..."
                    android:id="@+id/txt_STLCCL"
                    android:inputType="number"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Số TL đã chỉnh lý:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Số tài liệu đã chỉnh lý ..."
                    android:inputType="number"
                    android:id="@+id/txt_STLDCL"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ngôn ngữ:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <Spinner android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.7"
                    android:id="@+id/spn_NgonNgu"
                    android:background="@drawable/design_spinner"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Công cụ tra cứu:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Công cụ tra cứu ..."
                    android:id="@+id/txt_CCTC"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thời gian tài liệu:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Thời gian tài liệu ..."
                    android:id="@+id/txt_TGTL"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Các nhóm tài liệu:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Các nhóm tài liệu ..."
                    android:id="@+id/txt_CNTL"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thời gian nhập tài liệu:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Thời gian nhập tài liệu ..."
                    android:id="@+id/txt_TGNTL"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lập bản sao bảo hiểm:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Lập bản sao bảo hiểm ..."
                    android:id="@+id/txt_LBSBH"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử phát triển:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Lịch sử phát triển ..."
                    android:id="@+id/txt_LSPT"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú:"
                    android:layout_weight="0.3"
                    android:textStyle="bold"/>
                <EditText android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:hint="Ghi chú ..."
                    android:id="@+id/txt_GhiChu"
                    android:background="@drawable/design_edittext"/>
            </TableRow>

        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_addnew"
                android:id="@+id/btn_AddNew"
                android:background="@drawable/design_button"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_update"
                android:id="@+id/btn_Update"
                android:visibility="gone"
                android:background="@drawable/design_button"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancel"
                android:id="@+id/btn_Cancel"
                android:background="@drawable/design_button"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:hint="Nhập vào giá trị tìm kiếm..."
                android:id="@+id/txt_SearchValue"
                android:background="@drawable/design_edittext" />
            <Spinner
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.4"
                android:id="@+id/spn_SearchType"
                android:background="@drawable/design_spinner"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Tìm kiếm"
                android:id="@+id/btn_Search"
                android:background="@drawable/design_button"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="STT"
                android:layout_weight="1"
                android:lines="2"
                android:textStyle="bold"
                android:maxEms="10"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Mã phông"
                android:singleLine="false"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Tên phông"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lines="2"
                android:maxEms="10"
                android:text="Ghi chú"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lines="2"
                android:maxEms="10"
                android:text="Thao tác"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_p"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_button"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        </LinearLayout>

    </LinearLayout>
</ScrollView>