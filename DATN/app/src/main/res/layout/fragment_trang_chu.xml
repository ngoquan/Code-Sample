<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:fillViewport="true"
    android:nestedScrollingEnabled="true"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Từ khóa"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_searchValue"
                android:layout_weight="4"
                android:background="@drawable/design_edittext"
                android:hint="Nhập vào giá trị tìm kiếm..."
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:id="@+id/spn_searchType"
                android:background="@drawable/design_spinner"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_search"
                android:layout_weight="1.5"
                android:background="@drawable/design_button"
                android:text="@string/btn_search"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_header"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_view_as_list"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_header"
                android:text="Kết quả tìm kiếm: Có 100 kết quả"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_hoSo"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="STT"
                android:layout_weight="1"
                android:lines="2"
                android:textStyle="bold"
                android:maxEms="10"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Tên phông"
                android:singleLine="false"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Hồ sơ số"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:lines="2"
                android:maxEms="10"
                android:text="Tiêu đề"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="2"
                android:maxEms="10"
                android:text="Số lượng tờ"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_vanBan"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="STT"
                android:layout_weight="1"
                android:lines="2"
                android:textStyle="bold"
                android:maxEms="10"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Hồ sơ số"
                android:singleLine="false"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Mục lục số"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lines="2"
                android:maxEms="10"
                android:text="Số ký hiệu VB"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:lines="2"
                android:maxEms="10"
                android:text="Trích yếu nội dung"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_trangChu"
            android:focusableInTouchMode="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_button"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone">
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="F"
                android:textSize="10sp"
                android:id="@+id/btn_first"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="B"
                android:textSize="10sp"
                android:id="@+id/btn_back"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="J"
                android:textSize="10sp"
                android:id="@+id/btn_jump_back"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="1"
                android:textSize="10sp"
                android:id="@+id/btn_1"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="2"
                android:textSize="10sp"
                android:id="@+id/btn_2"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="3"
                android:textSize="10sp"
                android:id="@+id/btn_3"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="4"
                android:textSize="10sp"
                android:id="@+id/btn_4"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="5"
                android:textSize="10sp"
                android:id="@+id/btn_5"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="J"
                android:textSize="10sp"
                android:id="@+id/btn_jump_next"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="N"
                android:textSize="10sp"
                android:id="@+id/btn_next"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="E"
                android:textSize="10sp"
                android:id="@+id/btn_end"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>