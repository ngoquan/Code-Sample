<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/txt_header"
                android:text="Có 100 văn bản"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="MỤC LỤC VĂN BẢN"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txt_caption"
                android:gravity="center"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="4"
                android:id="@+id/spn_searchType"
                android:background="@drawable/design_spinner"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="STT"
                android:layout_weight="1"
                android:singleLine="false"
                android:lines="2"
                android:textStyle="bold"
                android:maxEms="10"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Số và KHVB"
                android:singleLine="false"
                android:padding="3dp"
                android:background="@drawable/custom_header_listview"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:lines="2"
                android:maxEms="10"
                android:textStyle="bold"
                android:text="Ngày tháng"
                android:padding="3dp"
                android:singleLine="false"
                android:background="@drawable/custom_header_listview"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:lines="2"
                android:maxEms="10"
                android:text="Trích yếu nội dung"
                android:padding="3dp"
                android:singleLine="false"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:lines="2"
                android:maxEms="10"
                android:singleLine="false"
                android:text="Tác giả"
                android:padding="3dp"
                android:textStyle="bold"
                android:background="@drawable/custom_header_listview"
                android:gravity="center"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_mucLucVB"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hiện tại chưa có dữ liệu"
            android:id="@+id/txt_status"
            android:visibility="gone"
            android:textColor="@color/red"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_button"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone">
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="F"
                android:textSize="10sp"
                android:id="@+id/btn_first"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="B"
                android:textSize="10sp"
                android:id="@+id/btn_back"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="J"
                android:textSize="10sp"
                android:id="@+id/btn_jump_back"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="1"
                android:textSize="10sp"
                android:id="@+id/btn_1"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="2"
                android:textSize="10sp"
                android:id="@+id/btn_2"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="3"
                android:textSize="10sp"
                android:id="@+id/btn_3"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="4"
                android:textSize="10sp"
                android:id="@+id/btn_4"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="5"
                android:textSize="10sp"
                android:id="@+id/btn_5"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="J"
                android:textSize="10sp"
                android:id="@+id/btn_jump_next"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="N"
                android:textSize="10sp"
                android:id="@+id/btn_next"/>
            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="E"
                android:textSize="10sp"
                android:id="@+id/btn_end"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>