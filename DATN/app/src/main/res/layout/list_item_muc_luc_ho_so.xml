<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hopHS"
        android:text="Hộp số"
        android:layout_weight="1"
        android:lines="2"
        android:maxEms="10"
        android:padding="3dp"
        android:background="@drawable/custom_textview"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_hoSoSo"
        android:text="Hồ sơ số"
        android:layout_weight="1.5"
        android:lines="2"
        android:maxEms="10"
        android:padding="3dp"
        android:background="@drawable/custom_textview"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:lines="2"
        android:maxEms="10"
        android:id="@+id/txt_tieuDeHS"
        android:text="Tiêu đề hồ sơ"
        android:singleLine="false"
        android:padding="3dp"
        android:background="@drawable/custom_textview"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_NTBDKT"
        android:layout_weight="2.5"
        android:lines="2"
        android:maxEms="10"
        android:text="Ngày tháng BĐ - KT"
        android:padding="3dp"
        android:background="@drawable/custom_textview" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_SLT"
        android:layout_weight="1"
        android:lines="2"
        android:maxEms="10"
        android:text="Số lượng tờ"
        android:padding="3dp"
        android:background="@drawable/custom_textview" />

</LinearLayout>